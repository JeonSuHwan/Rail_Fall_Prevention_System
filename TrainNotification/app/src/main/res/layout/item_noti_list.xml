<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/dash_list_selector"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_weight="0.5"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/notilist_ischecked"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:background="@drawable/button_new"
            android:textColor="@color/white"
            android:textStyle="bold"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="5"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:gravity="left|center">

        <TextView
            android:id="@+id/notilist_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020/08/19 16:19:11"
            android:textColor="@color/gray1"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/notilist_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[서울역 1번 탑승구] 위험이 감지되었습니다."
            android:textColor="@color/black"
            android:textSize="13dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/notilist_image"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
    </LinearLayout>



</LinearLayout>